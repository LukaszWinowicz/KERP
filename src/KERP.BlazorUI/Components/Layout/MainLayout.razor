@using Microsoft.AspNetCore.Components.Authorization
@inherits LayoutComponentBase

<FluentLayout>
    <Header></Header>
    <FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%">
        <!-- Pasek boczny widoczny tylko dla zalogowanych -->
        <AuthorizeView>
            <Authorized>
                <NavMenu />
            </Authorized>
        </AuthorizeView>

        <FluentBodyContent Class="body-content">
            <div class="content">
                @Body
                <FluentDialogProvider @rendermode="RenderMode.InteractiveServer" />
            </div>
            <FluentToastProvider MaxToastCount="10" @rendermode="RenderMode.InteractiveServer" />
        </FluentBodyContent>
    </FluentStack>
</FluentLayout>